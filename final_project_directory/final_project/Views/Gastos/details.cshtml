@model final_project.Models.Gasto

@{
    ViewData["Title"] = "Detalles del Gasto";
}

<div class="row">
    <div class="col-md-12">
        <h1 class="mb-4"><i class="bi bi-eye"></i> Detalles del Gasto</h1>
    </div>
</div>

<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="card">
            <div class="card-header bg-info text-white">
                <h5 class="mb-0"><i class="bi bi-receipt"></i> Información Completa</h5>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-3">
                        <i class="bi bi-hash"></i> ID
                    </dt>
                    <dd class="col-sm-9">
                        #@Model.Id
                    </dd>

                    <dt class="col-sm-3">
                        <i class="bi bi-chat-left-text"></i> Descripción
                    </dt>
                    <dd class="col-sm-9">
                        <h5>@Model.Descripcion</h5>
                    </dd>

                    <dt class="col-sm-3">
                        <i class="bi bi-cash"></i> Monto
                    </dt>
                    <dd class="col-sm-9">
                        <h3 class="text-danger mb-0">$@Model.Monto.ToString("N2")</h3>
                    </dd>

                    <dt class="col-sm-3">
                        <i class="bi bi-tag"></i> Categoría
                    </dt>
                    <dd class="col-sm-9">
                        <span class="badge bg-info fs-6">@Model.Categoria</span>
                    </dd>

                    <dt class="col-sm-3">
                        <i class="bi bi-calendar"></i> Fecha
                    </dt>
                    <dd class="col-sm-9">
                        <strong>@Model.Fecha.ToLongDateString()</strong>
                        <br>
                        <small class="text-muted">
                            @{
                                var diasDesde = (DateTime.Now - Model.Fecha).Days;
                            }
                            @if (diasDesde == 0)
                            {
                                <span>Hoy</span>
                            }
                            else if (diasDesde == 1)
                            {
                                <span>Ayer</span>
                            }
                            else if (diasDesde < 30)
                            {
                                <span>Hace @diasDesde días</span>
                            }
                            else
                            {
                                <span>Hace @Math.Round((decimal)diasDesde / 30, 1) mes(es)</span>
                            }
                        </small>
                    </dd>

                    @if (!string.IsNullOrEmpty(Model.Notas))
                    {
                        <dt class="col-sm-3">
                            <i class="bi bi-sticky"></i> Notas
                        </dt>
                        <dd class="col-sm-9">
                            <div class="alert alert-light">
                                @Model.Notas
                            </div>
                        </dd>
                    }
                </dl>

                <hr>

                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Volver a la Lista
                    </a>
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                        <i class="bi bi-pencil"></i> Editar
                    </a>
                    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Eliminar
                    </a>
                </div>
            </div>
        </div>

        <!-- Card de Estadísticas -->
        <div class="card mt-4 border-info">
            <div class="card-header bg-light">
                <h6 class="mb-0"><i class="bi bi-bar-chart"></i> Contexto</h6>
            </div>
            <div class="card-body">
                <div class="row text-center">
                    <div class="col-md-6">
                        <p class="text-muted mb-1">Día de la semana</p>
                        <p class="fs-5 fw-bold">@Model.Fecha.ToString("dddd")</p>
                    </div>
                    <div class="col-md-6">
                        <p class="text-muted mb-1">Mes</p>
                        <p class="fs-5 fw-bold">@Model.Fecha.ToString("MMMM yyyy")</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>