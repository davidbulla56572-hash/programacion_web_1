@model final_project.Models.Presupuesto

@{
    ViewData["Title"] = "Editar Presupuesto";
}

<div class="row">
    <div class="col-md-12">
        <h1 class="mb-4"><i class="bi bi-pencil"></i> Editar Presupuesto</h1>
    </div>
</div>

<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="card">
            <div class="card-header bg-warning text-dark">
                <h5 class="mb-0"><i class="bi bi-pencil-square"></i> Modificar Información del Presupuesto</h5>
            </div>
            <div class="card-body">
                <form asp-action="Edit" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                    
                    <input type="hidden" asp-for="Id" />
                    
                    <div class="mb-3">
                        <label asp-for="MontoTotal" class="form-label">
                            <i class="bi bi-wallet2"></i> Monto Total del Presupuesto
                        </label>
                        <div class="input-group">
                            <span class="input-group-text">$</span>
                            <input asp-for="MontoTotal" class="form-control" step="0.01" />
                        </div>
                        <span asp-validation-for="MontoTotal" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="FechaInicio" class="form-label">
                                <i class="bi bi-calendar-check"></i> Fecha de Inicio
                            </label>
                            <input asp-for="FechaInicio" class="form-control" type="date" />
                            <span asp-validation-for="FechaInicio" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="FechaFin" class="form-label">
                                <i class="bi bi-calendar-x"></i> Fecha de Fin
                            </label>
                            <input asp-for="FechaFin" class="form-control" type="date" />
                            <span asp-validation-for="FechaFin" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Descripcion" class="form-label">
                            <i class="bi bi-chat-left-text"></i> Descripción (Opcional)
                        </label>
                        <textarea asp-for="Descripcion" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Descripcion" class="text-danger"></span>
                    </div>

                    <div class="mb-3 form-check">
                        <input asp-for="Activo" class="form-check-input" type="checkbox" />
                        <label asp-for="Activo" class="form-check-label">
                            <i class="bi bi-check-circle"></i> Presupuesto activo
                        </label>
                        <span asp-validation-for="Activo" class="text-danger"></span>
                        <br>
                        <small class="form-text text-muted">
                            <i class="bi bi-exclamation-circle"></i> Si activas este presupuesto, los demás se desactivarán automáticamente
                        </small>
                    </div>

                    <hr>

                    <div class="alert alert-warning">
                        <i class="bi bi-exclamation-triangle"></i> <strong>Importante:</strong> 
                        Los cambios en las fechas o el monto afectarán los cálculos de gastos asociados a este presupuesto.
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-between">
                        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                            <i class="bi bi-trash"></i> Eliminar
                        </a>
                        <div>
                            <a asp-action="Index" class="btn btn-secondary me-2">
                                <i class="bi bi-x-circle"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-warning">
                                <i class="bi bi-save"></i> Guardar Cambios
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <!-- Información del Periodo -->
        <div class="card mt-4 border-info">
            <div class="card-header bg-info text-white">
                <h6 class="mb-0"><i class="bi bi-info-circle"></i> Información del Periodo</h6>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <p><strong>Fecha de Inicio:</strong> @Model.FechaInicio.ToLongDateString()</p>
                        <p><strong>Fecha de Fin:</strong> @Model.FechaFin.ToLongDateString()</p>
                    </div>
                    <div class="col-md-6">
                        <p>
                            <strong>Duración:</strong> 
                            @((Model.FechaFin - Model.FechaInicio).Days) días
                        </p>
                        <p>
                            <strong>Estado:</strong> 
                            @if (Model.Activo)
                            {
                                <span class="badge bg-success">Activo</span>
                            }
                            else if (Model.FechaFin < DateTime.Now)
                            {
                                <span class="badge bg-secondary">Finalizado</span>
                            }
                            else
                            {
                                <span class="badge bg-warning">Inactivo</span>
                            }
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}